<!-- Search form -->
<%= form_tag search_path, method: :get, id: 'new_search_schools' do %>
  <%= text_field_tag :domicilio, nil, placeholder: t('forms.search.address_placeholder') %>
  <%= text_field_tag :colonia, nil, placeholder: t('forms.search.suburb_placeholder') %>
  <%= text_field_tag :codigo_postal, nil, placeholder: t('forms.search.zip_code_placeholder') %>
  <%= select_tag :ciudad, options_for_select(School::CITIES, School::CITIES.first) %>
  <%= select_tag :nivel, options_for_select(School::GRADES), prompt: t('forms.search.grade') %>
  <%= submit_tag t('helpers.search') %>
<% end %>
<!-- /End search form -->
<table>
  <thead>
    <th>ID</th>
    <th>Nombre</th>
    <th>Distancia</th>
    <th>Cupo Disponible</th>
    <th>Posici√≥n municipal</th>
  </thead>
  <% @schools.each do | school | %>
    <tr>
      <td><%= school.id %> </td>
      <td><%= link_to school.name, school_path(school) %> </td>
      <td><%= school.distance.round(2) %> km </td>
      <td><%= school.availability %> </td>
      <td><%= school.city_rank %></td>
    </tr>
  <% end%>
</table>
